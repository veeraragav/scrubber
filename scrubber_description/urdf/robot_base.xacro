<?xml version="1.0"?>

<robot
  name="robot_base"
  xmlns:xacro="http://www.ros.org/wiki/xacro"
  >
 
<xacro:include filename="$(find scrubber_description)/urdf/robot_base.gazebo" />

  <link  name="base_link" />

    <joint
    name="Jchassis"
    type="fixed">
    <origin
      xyz="0 0 0.1"
      rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="chassis" />
    <axis
      xyz="0 0 0" />
  </joint>

 
   <link
    name="chassis">
    <inertial>
      <origin
        xyz="-0.025921 -0.00023881 -0.093361"
        rpy="0 0 0" />
      <mass
        value="30" />
      <inertia
        ixx="0.28974"
        ixy="-0.003469"
        ixz="0.037331"
        iyy="0.71812"
        iyz="-0.0010571"
        izz="0.69853" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://scrubber_description/meshes/chassis.stl"/>
      </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.92549 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://scrubber_description/meshes/chassis.stl" />
      </geometry>
    </collision>
  </link>

   <joint
    name="JLEFT"
    type="continuous">
    <origin
      xyz="0 0.175 0"
      rpy="0 0 0" />
    <parent
      link="chassis" />
    <child
      link="LEFTWHEEL" />
    <axis
      xyz="0 1 0" />
  </joint>

  <link name="LEFTWHEEL">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
      <origin
      xyz="0 0 0"
      rpy="1.507 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
    <origin
      xyz="0 0 0"
      rpy="1.507 0 0" />
      <mass value="10"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>

  <joint
    name="JRIGHT"
    type="continuous">
    <origin
      xyz="0 -0.175 0"
      rpy="0 0 0" />
    <parent
      link="chassis" />
    <child
      link="RIGHTWHEEL" />
    <axis
      xyz="0 1 0" />
  </joint>

  <link name="RIGHTWHEEL">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
      <origin
      xyz="0 0 0"
      rpy="1.507 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
    <origin
      xyz="0 0 0"
      rpy="1.507 0 0" />
      <mass value="10"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>

  <joint
    name="brush_joint"
    type="fixed">
    <origin
      xyz="0.3 0.0 -0.05"
      rpy="0 0 0 " />
    <parent
      link="chassis" />
    <child
      link="brush" />
  </joint>

     <link
    name="brush">
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <mass
        value="2" />
      <inertia
        ixx="0.28974"
        ixy="-0.003469"
        ixz="0.037331"
        iyy="0.71812"
        iyz="-0.0010571"
        izz="0.69853" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://scrubber_description/meshes/brush.stl"/>
      </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.92549 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://scrubber_description/meshes/brush.stl" />
      </geometry>
    </collision>
  </link>


    <joint
    name="lidar_joint"
    type="fixed">
    <origin
      xyz="0.35 0.0 0.225"
      rpy="0 0 0 " />
    <parent
      link="chassis" />
    <child
      link="lidar" />
  </joint>

  <link  name="lidar" />
